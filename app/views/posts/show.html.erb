  <% else %>
    <%= link_to '좋아요', post_like_path, method: 'post' %>:
  <% end %>
  <% @post.liked_users.each do |u| %>
    <%= u.email %>,
  <% end %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
